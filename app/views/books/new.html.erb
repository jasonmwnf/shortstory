<%= simple_form_for @book, html: { class: "form-signin"} do |f| %>
  <%= f.input :name, required: true, label: false, autofocus: true, placeholder: "Book Name", input_html: { class: "form-control" } %>
  <%= f.input :author, required: true, label: false, placeholder: "Author", input_html: { class: "form-control" } %>
  <%= f.text_area :description, required: true, label: false, placeholder: "Description", input_html: { class: "form-control" } %>
  <%= f.input :price, required: true, label: false, placeholder: "Price", input_html: { class: "form-control" } %>
  <%= f.label :availability, "Availability" %>
  <%= f.check_box :availability, label: true, input_html: { class: "form-control" } %>
  <%= f.button :submit, "Create Book", class: "btn btn-primary btn-block" %>
<% end %>